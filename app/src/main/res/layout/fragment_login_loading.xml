<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_500"
    tools:context="com.eze.ui.fragments.LoginLoadingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_app_display"
            app:layout_constraintBottom_toTopOf="@id/txt_app_progress"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EZ-E"
            android:textSize="50sp"
            app:layout_constraintVertical_bias="0.4"
            style="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="italic|bold"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/txt_app_progress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/txt_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Logging in..."
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/txt_app_progress"
            app:layout_constraintRight_toRightOf="@id/txt_app_progress"
            app:layout_constraintTop_toBottomOf="@id/txt_app_progress" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>